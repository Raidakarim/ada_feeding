<root BTCPP_format="4" main_tree_to_execute="PartialPlateLocator" >
  <!-- Subtree Includes -->
  <include path="./helpers.xml" />

  <!-- Simple Trajectories for Moving Once for Locating Partial Plate from Original Plate Position; used in only Full Autonomy -->
  <BehaviorTree ID="PartialPlateLocator">
    <Sequence name="root_sequence">
      <!-- Go to forward right -->
      <AdaPlanToPoseOffset offset="0.05;0.35;0.0" rotation="0.0;0.0;0.0" worldCollision="true" traj="{traj}" />
      <AdaExecuteTrajectory traj="{traj}" />

      <!-- Go to backward right -->
      <AdaPlanToPoseOffset offset="0.05;-0.35;0.0" rotation="0.0;0.0;0.0" worldCollision="true" traj="{traj}" />
      <AdaExecuteTrajectory traj="{traj}" />

      <!-- Go to backward left -->
      <AdaPlanToPoseOffset offset="-0.05;-0.35;0.0" rotation="0.0;0.0;0.0" worldCollision="true" traj="{traj}" />
      <AdaExecuteTrajectory traj="{traj}" />

      <!-- Go to forward left -->
      <AdaPlanToPoseOffset offset="-0.05;0.35;0.0" rotation="0.0;0.0;0.0" worldCollision="true" traj="{traj}" />
      <AdaExecuteTrajectory traj="{traj}" />

      <!-- Go to forward right -->>
      <AdaPlanToPoseOffset offset="0.05;0.35;0.0" rotation="0.0;0.0;0.0" worldCollision="true" traj="{traj}" />
      <AdaExecuteTrajectory traj="{traj}" />
    </Sequence>
  </BehaviorTree>
</root>